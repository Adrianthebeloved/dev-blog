# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,ini}]
indent_style = space
indent_size = 4

[*.{html,css,js,json,yml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{**.min.js,**.min.css}]
indent_style = ignore
insert_final_newline = ignore
